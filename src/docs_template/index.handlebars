<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>{{project.name}} styleguide</title>  
    
    <link rel="stylesheet" href="assets/js/prettify/prettify.css"/>
    <link rel="stylesheet" href="assets/css/styles.css"/>
    <link rel="stylesheet" href="assets/css/main.css">
    
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
</head>
<body>

    <header class="mui-page-header">
        <div class="mui-content-container">
            <h1 class="mui-header-logo">{{project.name}} v.{{project.version}}</h1>
        </div>
    </header>

    <main>
        <div class="mui-content-container">
            <nav class="table-of-contents">
                <h2>Table of Contents</h2>
                <ul>
                    {{#files}}
                        <li><a href="#{{file}}" data-file="{{file}}">{{file}}</a></li>
                    {{/files}}
                </ul>
            </nav>

            <div class="styleguide">
                {{#files}}
                    <div class="file-docs">
                        <h3 id="{{file}}">{{file}}</h3>
                        {{#blocks}}
                            <div class="block">
                                <div class="info">
                                    <h4>{{name}}</h4>
                                    {{#if description}}
                                        <p class="description">{{description}}</p>
                                    {{/if}}
                                    {{#state}}
                                        <p class="state"><span>{{name}}</span> - {{description}}</p>
                                    {{/state}}
                                </div>

                                {{#if markup}}
                                    <div class="example">{{{markup.example}}}</div>

                                    {{#state}}
                                        <div class="example state {{class}}">
                                            <div class="name">{{name}}</div>{{{../markup.example}}}
                                        </div>
                                    {{/state}}

                                    <pre class="prettyprint lang-html markup">{{{markup.escaped}}}</pre>
                                {{/if}}
                            </div>
                        {{/blocks}}
                    </div>
                {{/files}}
            </div>
        </div>
    </main>

    <footer></footer>
    
    <script src="assets/js/prettify/prettify.js?v=1"></script>
    <!--<script src="assets/js/main.js"></script>-->
    <script>
        // Some dirty fixes for better docs experience
        
        document.addEventListener('DOMContentLoaded', function() {
            [].forEach.call(document.querySelectorAll('.example:not(.state) .docs-remove-default-example'), function(element){
                element.parentElement.style.display = 'none';
            });

            [].forEach.call(document.querySelectorAll('.example.state'), function(example) {
                var c = example.childNodes,
                    name = c[1].innerHTML;

                if (name[0] === ':') {
                    example.style.display = 'none';
                } else {
                    if (c[2].nodeName !== '#text') {
                        c[2].className += ' ' + name;
                    } else {
                        if (c[3].className && c[3].className.indexOf('docs-only-wrapper') != -1) {
                            c[3].childNodes[1].className += ' ' + name;
                        } else {
                            c[3].className += ' ' + name;
                        }
                    }
                }
            });

            [].forEach.call(document.querySelectorAll('pre'), function(atv){
                atv.innerHTML = atv.innerHTML.replace(new RegExp(" docs-[a-z-]*", "g"), "");
            });
            
            prettyPrint();
        });
    </script>
    <script src="assets/js/main.js"></script>
</body>
</html>
